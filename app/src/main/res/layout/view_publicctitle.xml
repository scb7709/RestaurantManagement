<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_publictitle_view"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_publictitle_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appcolorred"
       >

        <TextView
            android:id="@+id/view_publictitle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/view_publictitle_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp">
            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_back" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/view_publictitle_right"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp">
            <Button
                android:id="@+id/view_publictitle_righticon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>