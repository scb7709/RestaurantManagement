<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_headtitle_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_headtitle_relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Maincolor">

        <TextView
            android:id="@+id/activity_headtitle__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/activity_headtitle__back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp">

            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_back"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_headtitle__icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:visibility="gone">

            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_action_discard"
                android:clickable="false" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>