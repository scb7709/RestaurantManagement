<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/view_publicctitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/icon_memberdetails">


        <com.zyhp.restaurantmanagement.myview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/reba" />

        <TextView
            android:id="@+id/activity_menberdetials_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="dffdsf"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
                android:text="余额:   "
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/activity_menberdetials_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="$55555"
                android:textColor="@color/appcolorred"
                android:textSize="30dp"
                android:visibility="visible" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="积分:   "
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/activity_menberdetials_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="55555"
                android:textColor="@color/appcolorred"
                android:textSize="30dp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/activity_menberdetials_RadioGroup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/memberdatails_shape"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_menberdetials_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@drawable/member_text_color_selector" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/appcolorred"></View>

        <RadioButton
            android:id="@+id/activity_menberdetials_consumptionrecords"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="消费记录"
            android:textColor="@drawable/member_text_color_selector" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_menberdetials_ViewPager"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>